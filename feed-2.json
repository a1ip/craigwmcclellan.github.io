---
layout: null
permalink: feed-2.json
---
{
    "version": "https://jsonfeed.org/version/1",
    "title": {{ site.name | smartify | jsonify }},
    "home_page_url": "{{ site.url }}/",
    "feed_url": "{{ site.url }}/feed.json",
    "author": {
        "name": "{{ site.author }}",
        "url": "http://craigmcclellan.com"
    },
    "expired": false,
    "items": [
{% for post in site.posts %}
	{% if page.category == "microblog" %}
        {
            "id": "{{ post.id }}",
            "title":
            "content_html": {{ post.content | jsonify }},
            "url": "{{ site.url }}{{ post.url }}",
            "summary": {% if post.url contains "/blog/" %}{{ post.excerpt | smartify | jsonify }}{% else %}{{ post.description | smartify | jsonify }}{% endif %},
            "date_published": "{{ post.date }}"
        
	{% else %}
		{
            "id": "{{ post.id }}",
            "title": {{ post.title | smartify | jsonify }},
            "content_html": {{ post.content | jsonify }},
            "url": "{{ site.url }}{{ post.url }}",
            "external_url": {{ page.link }}
            "summary": {% if post.url contains "/blog/" %}{{ post.excerpt | smartify | jsonify }}{% else %}{{ post.description | smartify | jsonify }}{% endif %},
            "date_published": "{{ post.date }}"     
	{% endif %}
	}{% unless forloop.last == true %},{% endunless %}
{% endfor %}
    ]
}